<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cat.foixench.listview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EjemploListActivity"
            android:label="@string/title_activity_my_list"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EjemploActivityConListaActivity"
            android:label="@string/title_activity_ejemplo_con_lista"
            android:parentActivityName=".EjemploListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cat.foixench.listview.EjemploListActivity" />
        </activity>
        <activity
            android:name=".CustomItemActivity"
            android:label="@string/title_activity_custom_item"
            android:parentActivityName=".EjemploListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cat.foixench.listview.EjemploListActivity" />
        </activity>
    </application>

</manifest>