<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="cat.foixench.ceina.tareaasincrona.MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="@dimen/bar_height">

        <Button
            android:id="@+id/btnBlock"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/bloquear"
            style="?android:attr/buttonBarStyle"/>

        <Button
            android:id="@+id/btnAction"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/accion"
            style="?android:attr/buttonBarStyle"/>

        <Button
            android:id="@+id/btnAsync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/async"
            style="?android:attr/buttonBarStyle"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp" />
</FrameLayout>
