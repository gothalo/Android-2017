<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cat.foixench.test.parcelable.CustomerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelId"
        android:text="@string/lblId"
        android:textStyle="bold"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/contentId"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/labelId"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelName"
        android:text="@string/lblName"
        android:textStyle="bold"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/labelId"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/contentName"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/labelId"
        app:layout_constraintLeft_toRightOf="@id/labelName"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelAddress"
        android:text="@string/lblAddress"
        android:textStyle="bold"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/labelName"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/contentAddress"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/labelName"
        app:layout_constraintLeft_toRightOf="@id/labelAddress"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
