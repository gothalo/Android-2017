<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/liCallIcon"
        android:layout_margin="@dimen/default_margin"
        android:contentDescription="@string/callIconContentDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_made"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/liCallNumber"
        android:layout_margin="@dimen/default_margin"
        android:textSize="@dimen/text_large"
        app:layout_constraintLeft_toRightOf="@id/liCallIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/liCallDuration"
        android:layout_margin="@dimen/default_margin"
        android:textSize="@dimen/text_medium"
        app:layout_constraintTop_toBottomOf="@id/liCallNumber"
        app:layout_constraintLeft_toRightOf="@id/liCallIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>