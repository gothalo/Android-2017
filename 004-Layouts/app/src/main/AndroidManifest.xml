<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cat.foixench.ejemplosLayouts">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LinearLaoyoutActivity"
            android:label="@string/linearLayout"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".FrameLayoutActivity"
            android:label="@string/frameLayout"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cat.foixench.ejemplosLayouts.MainActivity" />
        </activity>
        <activity
            android:name=".TableLayoutActivity"
            android:label="@string/tableLayout"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cat.foixench.ejemplosLayouts.MainActivity" />
        </activity>
        <activity
            android:name=".GridLayoutActivity"
            android:label="@string/gridLayout"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cat.foixench.ejemplosLayouts.MainActivity" />
        </activity>
        <activity
            android:name=".RelativeLayoutActivity"
            android:label="@string/relativeLayout"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cat.foixench.ejemplosLayouts.MainActivity" />
        </activity>
    </application>

</manifest>